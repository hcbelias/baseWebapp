md-card.content.card.md-whiteframe-20dp.contact-card.content-card
  md-toolbar
    md-toolbar-tools
      span.md-headline Fale Conosco
  .degrade(layout='row')
  md-card-content
    form(name='contactForm' layout='column' layout-align="center center")
      div(layout='column' layout-gt-xs='row')
        md-input-container
          label(for='clientName') Nome
          input(ng-model="$ctrl.name" required name='clientName')
          div(ng-messages='contactForm.clientName.$error')
            div(ng-message='required') Preenchimento obrigatório 
        md-input-container
          label Telefone
          input(ng-model="$ctrl.phone", type="phone" name='clientPhone')
          div(ng-messages='contactForm.clientPhone.$error')
            div(ng-message='required') Preenchimento obrigatório
      div(layout='column' layout-gt-xs='row')
        md-input-container
          label E-mail
          input(ng-model="$ctrl.email", type="email")       
        md-input-container
          label Descrição
          textarea(ng-model="$ctrl.description" md-maxlength="300" md-minlength="10" required md-no-asterisk  md-select-on-focus)       
    md-divider(layout='row' layout-align="center center")
      facebook-button.dark